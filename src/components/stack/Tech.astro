---
import type { Tag } from '../../lib/definitions/tag';

interface Props {
    tag: Tag;
    color: string;
}

const { tag, color } = Astro.props;

const colorVariants : { [key: string]: {bg: string, border: string} } = {
    purple: { bg: 'bg-purple-600', border: 'border-purple-600 text-purple-600' },
    blue: {bg: 'bg-blue-600', border: 'border-blue-600 text-blue-600'},
    sky: {bg: 'bg-sky-600', border: 'border-sky-600 text-sky-600'},
    green: {bg: 'bg-green-600', border: 'border-green-600 text-green-600'},
    yellow: {bg: 'bg-yellow-600', border: 'border-yellow-600 text-yellow-600'},
    orange: {bg: 'bg-orange-600', border: 'border-orange-600 text-orange-600'},
    black: {bg: 'bg-black', border: 'border-black text-black'},
    red: {bg: 'bg-red-600', border: 'border-red-600 text-red-600'},
    brown: {bg: 'bg-orange-950', border: 'border-orange-950 text-orange-950'},   
    white: {bg: 'bg-slate-600', border:'border-slate-600 text-slate-600'}, 
  }
--- 

<article class={`group tooltip flex items-center bg-transparent hover:border-opacity-100 border-opacity-0 border rounded-2xl justify-center size-20 p-5 transition ${colorVariants[color].border} backdrop-blur-md backdrop-saturate-150`}>
    <div 
          class={`absolute inset-0 transition-opacity ${colorVariants[color].bg} opacity-10 group-hover:opacity-30 rounded-2xl blur-[1px] group-hover:blur-none`}
        />
        <section class="flex items-center justify-center transition size-full group-hover:scale-105">
    <tag.icon/>
</section>
<div class={`absolute left-1/2 -translate-x-1/2 bottom-full mb-2 px-3 py-2 border ${colorVariants[color].border} bg-transparent rounded-lg opacity-0 invisible group-hover:opacity-100 group-hover:visible transition-all duration-300 backdrop-blur-sm`}>
    {tag.title}
  </div>
</div>
</article>




